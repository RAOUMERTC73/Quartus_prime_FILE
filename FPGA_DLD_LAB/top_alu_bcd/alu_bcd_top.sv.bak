module alu_bcd_top(
    input wire [5-1:0] num1,
    input wire [5-1:0] num2,
    input wire [2-1:0] operation,
    output wire [6:0] seven_segment_output
);

    wire [5-1:0] alu_output;
    wire [3:0] alu_output_bcd;

    alu my_alu(
        .num1(num1),
        .num2(num2),
        .operation(operation),
        .out(alu_output)
    );

    bcd_to_7segment_decoder my_decoder(
        .bcd(alu_output[3:0]),  // Assuming the lower 4 bits of ALU output are BCD
        .seven(seven_segment_output)
    );

endmodule
